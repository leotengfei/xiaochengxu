.wenti_card{
  border-bottom:1px solid #ddd;
  padding:10rpx 30rpx;
}
.wenti_card::after{
  content:'';
  display: block;
  clear:both;
}
.wenti_img_container{
  float:left;
  margin-right:30rpx;
}
.wenti_img{
  width:120rpx;
  height:120rpx;
}
.wenti_info{
  float:left;
  width:530rpx;
}
.wenti_info_noimg{
  float:left;
  width:680rpx;
}
.wenti_desc{
  font-size:16px;
  color:#aaa;
}
.wenti_time{
  text-align: right;
  font-size:12px;
  color:#aaa;
}