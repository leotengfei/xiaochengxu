<!--pages/wode/wode.wxml-->
<view class='wode_container'>
  <!--头像，昵称显示区域  -->
  <view class='touxiang_area'>
    <view class="userinfo">
      <view class="userinfo-avatar">
        <open-data type="userAvatarUrl"></open-data>
      </view>
      <open-data type="userNickName"></open-data>
    </view>
  </view>
  <!--功能区  -->
  <view class='list_area'>
    <!--问题  -->
    <navigator url="/pages/wode/wenti">
      <view class='list_item'>
        <view class='list_icon'>
          <image src='../../img/wodetiwen.svg' class='list_img'></image>
        </view>
        <view class='list_name'>
          我的问题
        </view>
        <view class='list_right'>
          <image src='../../img/right.svg' class='list_img'></image>
        </view>
      </view>
    </navigator>
    <!--回答  -->
    <navigator url="/pages/wode/huida">
      <view class='list_item'>
        <view class='list_icon'>
          <image src='../../img/wodehuida.svg' class='list_img'></image>
        </view>
        <view class='list_name'>
          我的回答
        </view>
        <view class='list_right'>
          <image src='../../img/right.svg' class='list_img'></image>
        </view>
      </view>
    </navigator>
    <!--收藏  -->
    <navigator url="/pages/wode/shoucang">
      <view class='list_item'>
        <view class='list_icon'>
          <image src='../../img/shoucang.svg' class='list_img'></image>
        </view>
        <view class='list_name'>
          我的收藏
        </view>
        <view class='list_right'>
          <image src='../../img/right.svg' class='list_img'></image>
        </view>
      </view>
    </navigator>
    <!--历史  -->
    <navigator url="/pages/wode/lishi">
      <view class='list_item'>
        <view class='list_icon'>
          <image src='../../img/lishi.svg' class='list_img'></image>
        </view>
        <view class='list_name'>
          历史记录
        </view>
        <view class='list_right'>
          <image src='../../img/right.svg' class='list_img'></image>
        </view>
      </view>
    </navigator>
    <!--资料下载  -->
    <navigator url="">
      <view class='list_item'>
        <view class='list_icon'>
          <image src='../../img/xiazai.svg' class='list_img'></image>
        </view>
        <view class='list_name'>
          资料宝库
        </view>
        <view class='list_right'>
          <image src='../../img/right.svg' class='list_img'></image>
        </view>
      </view>
    </navigator>
  </view>
</view>