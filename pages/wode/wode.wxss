/* pages/wode/wode.wxss */
.touxiang_area {
  text-align: center;
  padding:15px 0;
  background-image: linear-gradient(125deg,#737583,#1e203b); 
  color:#fff;
}

.list_area{
  background-color: #fff;
}
.list_item{
  border:1px solid #ddd;
  padding: 15rpx 50rpx;
  margin-bottom: 5rpx;
}
.list_item::after{
  content:'';
  display: block;
  clear: both;
}
.list_icon{
  float:left;
  padding-right: 15px;
  padding-top:5px;
}
.list_name{
  float:left;
  line-height:40px;
  font-size:16px;
}
.list_img{
  width:50rpx;
  height:50rpx;
  vertical-align: middle;
}
.list_right{
  float:right;
  line-height: 40px;
}

.userinfo-nickname {
  color: #aaa;
}

.userinfo {  
  position: relative;  
  width: 750rpx;  
  height: 320rpx;   
  display: flex;  
  flex-direction: column;  
  align-items: center;  
}  
  
.userinfo-avatar {  
  overflow:hidden;  
  display: block;  
  width: 120rpx;  
  height: 120rpx;  
  margin: 20rpx;  
  margin-top: 50rpx;  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}