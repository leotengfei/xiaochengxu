/* pages/wode/wode.wxss */
page{
  background-color: #eee;
}
.touxiang_area {
  text-align: center;
  padding:15px 0;
  background-color: #76C5F0;
  margin-bottom:25px; 
  color:#fff;
}

.touxiang_img {
  border:2px solid #fff;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.nicheng{
  display: block;
}
.list_area{
  background-color: #fff;
  padding:0 15px;
}
.list_item{
  border-bottom:1px solid #ddd;
}
.list_item::after{
  content:'';
  display: block;
  clear: both;
}
.list_icon{
  float:left;
  padding-right: 15px;
  padding-top:5px;
}
.list_name{
  float:left;
  line-height:40px;
  font-size:16px;
}
.list_img{
  width:30px;
  height:30px;
}

.userinfo-nickname {
  color: #aaa;
}

.userinfo {  
  position: relative;  
  width: 750rpx;  
  height: 320rpx;   
  display: flex;  
  flex-direction: column;  
  align-items: center;  
}  
  
.userinfo-avatar {  
  overflow:hidden;  
  display: block;  
  width: 160rpx;  
  height: 160rpx;  
  margin: 20rpx;  
  margin-top: 50rpx;  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}