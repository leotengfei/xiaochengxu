/* pages/luntan/detail.wxss */

/*问题区域  */

.page_container {
  background-color: #eee;
}

.wenti_container {
  background-color: #fff;
}

.wenti_box {
  border-bottom: 1px solid #ddd;
  margin: 5px 15px;
  padding: 15px 0;
}

.wenti_title {
  font-weight: bold;
}

.wenti_desc {
  font-size: 16px;
  color: #666;
  padding: 5px 0;
}

.img_box {
  display: flex;
  flex-wrap: wrap;
}

.img_item {
  width: 60px;
  height: 60px;
  margin-top: 5px;
  margin-right: 5px;
}

.huida_btn {
  text-align: center;
  font-size: 16px;
  color: #666;
  padding-bottom: 5px;
}

.huida_btn_arrow {
  display: inline-block;
  width: 6px;
  height: 6px;
  transform: rotate(135deg);
  -webkit-transform: rotate(135deg);
  border-top: 1px solid #9d9d9d;
  border-right: 1px solid #9d9d9d;
  margin-left: 11px;
  position: relative;
  top: -4px;
}

.huida_btn_arrow_active {
  display: inline-block;
  width: 6px;
  height: 6px;
  transform: rotate(-45deg);
  -webkit-transform: rotate(-45deg);
  border-top: 1px solid #9d9d9d;
  border-right: 1px solid #9d9d9d;
  margin-left: 11px;
  position: relative;
  top: 0;
}

.huida_area {
  margin: 5px 15px;
  border: 1px solid #ddd;
  padding: 5px 15px;
}

.huida_box {
  padding-bottom: 15px;
}

.huida_box::after {
  content: '';
  display: block;
  clear: both;
}

.txtarea_placeHolder {
  color: #aaa;
  font-size: 16px;
}

.huida_fabu {
  float: right;
  width: 180rpx;
  height: 35px;
  line-height: 35px;
  margin-right: 15px;
  background-color: #76c5f0;
  color: #fff;
  font-weight: bold;
  font-size: 20px;
}

/*答案区域  */

.answer_box {
  margin-top: 10px;
  background-color: #fff;
}

.answer_card {
  margin-bottom: 5px;
  margin: 5px 15px;
  border-bottom:1px solid #ddd;
  padding:10px 0;
}

.answer_tuijian {
  width: 50px;
  height: 25px;
  margin-top:5px;
  margin-left: -15px;
}

.answer_user {
  width: 35px;
  height: 35px;
}
.nicheng_box{
  padding:10px 0;
}
.nicheng_box::after {
  content: '';
  display: block;
  clear: both;
}

.nicheng_img {
  float: left;
  padding: 0 8px;
}

.nicheng_info {
  float: left;
}

.nicheng_time {
  font-size: 10px;
}

.answer_area {
  font-size: 18px;
  line-height: 30px;
  word-break: break-all;
  word-wrap: break-word;
  color: #333;
}
.answer_btn{
  padding:5px 0;
}
.answer_btn::after{
  content:'';
  display: block;
  clear:both;
}
.answer_zan_box,.answer_cai_box{
  float:left;
}
.answer_zan{
  width:20px;
  height:20px;
  vertical-align: text-bottom;
}
.answer_cai{
  width:20px;
  height:20px;
  vertical-align: text-bottom;
  transform: rotate(180deg);
}
.zan_num,.cai_num{
  line-height:20px;
  padding-left:10px;
  padding-right:10px;
  font-size:16px;
}